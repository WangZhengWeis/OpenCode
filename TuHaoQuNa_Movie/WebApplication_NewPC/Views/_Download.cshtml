@model Movie
@if (Model != null)
{
    if (Model.MovieTorrent != null)
    {
        var groups = Model.MovieTorrent.GroupBy(g=>g.Clear);
        <div class="tab__content">
            @foreach (var item in groups)
            {
                <div class="picture-container">
                    <div id="@item.Key" class="picture-title type--bold">
                        @item.Key
                    </div>
                    @foreach (var m in item)
                    {
                        <div class="container">
                            <div class="col-md-12">
                                <a class="torrent-title" style="color: #3f96ec;" href="@m.Torrent" target="_blank">@m.Title</a>
                            </div>
                            <div class="col-md-4">
                                <div class="tag-sm tag-size text-center">
                                    @(m.Size.HasValue? String.Format("{0:N2}", Convert.ToDouble(m.Size)/(1024.0*1024.0))+"GB":"未知")
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="tag-sm tag-picture3 text-center">
                                    @m.Meta
                                </div>
                            </div>
                            <div class="col-md-4">
                                <a href="@m.Magnet">
                                    <div class="tag-sm tag-magnet text-center">
                                        磁力链接
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-12 border-bottom-1px"></div>
                        </div>
                    }
                </div>
            }
        </div>
    }
}

